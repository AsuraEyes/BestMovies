@page "/"

<div class="control-container" style="width: 450px;">
    <SfCarousel AnimationEffect="CarouselAnimationEffect.Fade" ShowIndicators="false"
                CssClass="partial-carousel ec" AutoPlay=true PartialVisible=true>
        @foreach (CarouselDataModel data in CarouselData)
        {
            <CarouselItem>
                <figure class="img-container">
                    <img style="height:250px;width:100%;"src="images/carousel/@(data.ImageName)"/>
                    <figcaption class="img-caption">@data.Title</figcaption>
                </figure>
            </CarouselItem>
        }
    </SfCarousel>
</div>


