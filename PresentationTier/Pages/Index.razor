<h3>New Releases</h3>
<div class="container-fluid">
    <div class="card-container">
        @if (CardDatas.Count == 0)
        {
            <div class="e-error">
                <div class="e-error-content">No results found. Please try a different search.</div>
            </div>
        }
        else
        {
            <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4">
                @foreach (CardDataModel card in CardDatas)
                {
                    <div class="col sm" style="padding: 15px; overflow-y: auto">
                        <div>
                            <SfCard>
                                <CardImage Image="@card.ImageUrl"/>
                                <CardContent Content="@card.Title"/>
                                <CardFooter>
                                    <CardFooterContent>
                                        <SfButton CssClass="e-btn e-outline e-primary" @onclick="@(e => NavigateToUrlAsync(@card.NavUrl))">Read More</SfButton>
                                    </CardFooterContent>
                                </CardFooter>
                            </SfCard>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .partial-carousel-section .carousel-sample {
        margin: 0 auto 2em;
        max-width: 650px;
        height: 300px;
    }
    .partial-carousel .e-carousel-items .e-carousel-item .img-container {
        margin: 0 10px;
        width: 100%;
        height: 100%;
    }
    .partial-carousel .e-carousel-items .e-carousel-item .img-caption {
        bottom: 4em;
        color: #fff;
        font-size: 12pt;
        position: relative;
        padding: 0.3em 1em;
        text-align: center;
        width: 100%;
    }
    @@media screen and (max-width: 480px) {
        .partial-carousel-section .carousel-sample {
            height: 110px;
        }
        .partial-carousel .e-carousel-items .e-carousel-item .img-caption {
            position: absolute;
            top: 0;
            font-size: 12px;
            text-align: left;
        }
    }
</style>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: -10px;
    }
    
    .card {
        width: calc(33.33% - 20px);
        margin: 10px;
    }
</style>


