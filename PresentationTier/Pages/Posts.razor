@page "/Posts"

@using PresentationTier.Models
@using System.Collections.Generic

<style>
    .profile-pic {
           width: 50px;
           height: 50px;
           border-radius: 50%;
           object-fit: cover;
           padding-bottom: 10px;
       }
   
       .editor {
           background-color: #F9FAFB;
           padding: 40px;
           border-radius: 5px;
           box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.1);
       }
   
       .editor h1 {
           font-size: 36px;
           margin-bottom: 30px;
       }
   
       .editor input,
       .editor textarea {
           background-color: #F1F3F5;
           border: none;
           border-radius: 5px;
           padding: 15px;
           margin-bottom: 20px;
           font-size: 18px;
           color: #4B5563;
       }
   
       .editor button {
           background-color: #4F46E5;
           border: none;
           border-radius: 5px;
           color: white;
           padding: 15px;
           font-size: 18px;
           transition: all 0.2s ease-in-out;
       }
   
       .editor button:hover {
           background-color: #4338CA;
           cursor: pointer;
       }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Posts</h1>
        </div>
    </div>

    <div class="row mt-5">
        @if (posts != null && posts.Count > 0)
        {
            @foreach (var post in posts)
            {
                <div>
                    <h2>@post.Title</h2>
                    <p>@post.Content</p>
                    <p>Posted on: @post.PostedDate.ToShortDateString()</p>
                    <p>Posted by: @post.PostedBy</p>
                </div>
            }
        }
        else
        {
            <p>No posts found.</p>
        }
    </div>
</div>

@code {
  private List<Post> posts;

    protected override void OnInitialized()
    {
        // Initialize posts with some dummy data
        posts = new List<Post>
        {
            new Post { Title = "First post", Content = "This is my first post.", PostedDate = DateTime.Now.AddDays(-7), PostedBy = "John Doe" },
            new Post { Title = "Second post", Content = "This is my second post.", PostedDate = DateTime.Now.AddDays(-3), PostedBy = "Jane Doe" },
            new Post { Title = "Third post", Content = "This is my third post.", PostedDate = DateTime.Now.AddDays(-1), PostedBy = "Bob Smith" },
            new Post { Title = "Third post", Content = "This is my third post.", PostedDate = DateTime.Now.AddDays(-1), PostedBy = "Bob Smith" },
            new Post { Title = "Third post", Content = "This is my third post.", PostedDate = DateTime.Now.AddDays(-1), PostedBy = "Bob Smith" }
        };
    }

    private class Post
    {
        public string Title { get; set; }
        public string Content { get; set; }
        public DateTime PostedDate { get; set; }
        public string PostedBy { get; set; }
    }
}